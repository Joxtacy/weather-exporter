# Weather Exporter Environment Variables
# Copy this file to .env and customize with your values

# User-Agent for yr.no API (can also use --user-agent CLI argument)
# The CLI argument takes precedence over this environment variable
# Format: app-name/version contact-info
# Examples:
#   WEATHER_USER_AGENT='my-weather-app/1.0 github.com/myusername/myrepo'
#   WEATHER_USER_AGENT='personal-station/2.0 contact@example.com'
#   WEATHER_USER_AGENT='home-automation/1.5 https://my-website.com'
WEATHER_USER_AGENT='CHANGE-ME/1.0 your-contact-info'

# Comma-separated list of locations to monitor
# Can also use --locations CLI argument (which takes precedence)
# Default: Oslo
WEATHER_LOCATIONS='Oslo,Stockholm,Copenhagen'

# Port for the metrics endpoint
# Can also use --port CLI argument (which takes precedence)
# Default: 9090
PORT=9090

# Logging level (trace, debug, info, warn, error)
# Can also use --log-level CLI argument (which takes precedence)
# Default: info
RUST_LOG=info
